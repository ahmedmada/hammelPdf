<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pdfPaint_slide_intro_tools_selection"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/pdfPaint_welcome_margin_top">

    <androidx.appcompat.widget.AppCompatImageView
        android:contentDescription="@string/pdfPaint_tool_icon_description"
        android:id="@+id/pdfPaint_tools_info_icon"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/pdfPaint_textview_intro_tools_header"
        android:layout_width="wrap_content"
        app:tint="@color/pdfPaint_color_picker_white"
        tools:src="@drawable/ic_pocketpaint_dialog_warning" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/PdfPaintWelcomeText"
        android:id="@+id/pdfPaint_tools_info_description"
        android:layout_below="@+id/pdfPaint_textview_intro_tools_header"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/pdfPaint_welcome_margin_side"
        android:layout_marginStart="@dimen/pdfPaint_welcome_margin_side"
        android:layout_marginTop="@dimen/pdfPaint_welcome_margin_top_possibilities"
        android:layout_width="match_parent"
        android:text="@string/intro_bottom_navigation_tools_description"
        tools:text="tool_description" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/PdfPaintWelcomeHeader"
        android:id="@+id/pdfPaint_textview_intro_tools_header"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/pdfPaint_welcome_margin_side"
        android:layout_marginStart="@dimen/pdfPaint_welcome_margin_side"
        android:layout_width="wrap_content"
        android:text="@string/dialog_tools_title" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/PdfPaintWelcomeText"
        android:id="@+id/pdfPaint_textview_intro_tools_text"
        android:layout_above="@+id/pdfPaint_intro_bottom_bar"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/intro_tool_more_information" />

    <include
        layout="@layout/pocketpaint_layout_help_bottom_bar"
        android:id="@+id/pdfPaint_intro_bottom_bar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_width="0dp" />
</RelativeLayout>

